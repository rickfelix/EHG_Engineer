      console.log('âœ… Database load complete');
    } else {
      console.log('âš ï¸  Database not connected - loading from filesystem');
      
      // Fallback to filesystem loading
      const prdDir = path.join(PROJECT_ROOT, 'docs', 'prds');
      if (fs.existsSync(prdDir)) {
