{
  "dashboard": {
    "id": null,
    "uid": "ehg-supply-chain",
    "title": "EHG Supply Chain Security",
    "tags": ["security", "slsa", "supply-chain", "dual-lane"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "SLSA L3 Coverage",
        "targets": [
          {
            "expr": "avg(ehg_slsa_coverage_ratio{slsa_level=\"L3\"})",
            "legendFormat": "Coverage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Unsigned Artifacts (24h)",
        "targets": [
          {
            "expr": "sum(increase(ehg_unsigned_artifacts_detected[24h]))",
            "legendFormat": "Count"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Policy Violations (1h)",
        "targets": [
          {
            "expr": "sum(increase(ehg_policy_violations_total[1h]))",
            "legendFormat": "Violations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "gauge",
        "title": "Security Score",
        "targets": [
          {
            "expr": "avg(ehg_security_score)",
            "legendFormat": "Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "orange", "value": 50},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "Signature Verification Rate",
        "targets": [
          {
            "expr": "sum(rate(ehg_signature_verifications_total[5m])) by (result)",
            "legendFormat": "{{ result }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "showPoints": "never",
              "spanNulls": true,
              "stacking": {
                "mode": "normal",
                "group": "A"
              }
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "timeseries",
        "title": "SLSA Attestation Verification",
        "targets": [
          {
            "expr": "sum(rate(ehg_slsa_attestations_verified[5m])) by (slsa_level, result)",
            "legendFormat": "L{{ slsa_level }} - {{ result }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "showPoints": "never",
              "spanNulls": true
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "type": "piechart",
        "title": "Policy Violations by Type",
        "targets": [
          {
            "expr": "sum(increase(ehg_policy_violations_total[1h])) by (policy_type)",
            "legendFormat": "{{ policy_type }}"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "type": "bargauge",
        "title": "Gate Pass Rate",
        "targets": [
          {
            "expr": "sum(rate(ehg_gate_executions_total{verdict=\"pass\"}[1h])) by (gate_name) / sum(rate(ehg_gate_executions_total[1h])) by (gate_name)",
            "legendFormat": "{{ gate_name }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "type": "heatmap",
        "title": "Lane Handoff Duration",
        "targets": [
          {
            "expr": "sum(increase(ehg_lane_handoff_duration_seconds_bucket[1h])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{ le }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            }
          }
        },
        "options": {
          "calculate": false,
          "yAxis": {
            "unit": "s",
            "reverse": false
          },
          "cellGap": 1,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20},
        "type": "table",
        "title": "Recent Security Events",
        "targets": [
          {
            "expr": "topk(10, sum(increase(ehg_gate_bypass_attempts_total[1h])) by (gate_name, requester, approved))",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "cellOptions": {
                "type": "auto"
              }
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "approved"
              },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background",
                    "mode": "basic"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "no": {
                          "color": "red",
                          "index": 0
                        },
                        "yes": {
                          "color": "green",
                          "index": 1
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "selected": false,
            "text": "Prometheus",
            "value": "prometheus"
          }
        },
        {
          "name": "environment",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(ehg_security_score, environment)",
          "current": {
            "selected": true,
            "text": ["production"],
            "value": ["production"]
          },
          "multi": true
        }
      ]
    }
  }
}