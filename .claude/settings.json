{
  "statusLine": {
    "type": "command",
    "command": "/mnt/c/_EHG/EHG_Engineer/.claude/statusline-context-tracker.sh"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/mnt/c/_EHG/EHG_Engineer/.claude/record-user-input.sh",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/mnt/c/_EHG/EHG_Engineer/.claude/notify-user.sh complete",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/mnt/c/_EHG/EHG_Engineer/.claude/notify-email.sh complete",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat > /tmp/claude-hook-debug.json && echo \"$(date): raw input saved\" >> /tmp/claude-model-tracking.log",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
